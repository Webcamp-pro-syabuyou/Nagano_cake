

<div class="order-field">
 <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>

  <!-- 支払い方法選択フォーム -->

  <h4><%= f.label :payment_method, "支払方法" %></h4>
  <%= f.radio_button :payment_method, "クレジットカード", checked: "checked" %>
  <%= f.label :payment_method, "クレジットカード" %>
  <br>
  <%= f.radio_button :payment_method, "銀行振込" %>
  <%= f.label :payment_method, "銀行振込" %>


  <!-- お届け先選択フォーム -->

  <h4><%= f.label :delivery_address, "お届け先" %></h4>

  <!-- ご自身の住所　-->

  <%= f.radio_button :address_option, 0, checked: "checked" %>
  <%= f.label :delivery_address, "ご自身の住所" %>
  <br>
  <%= @customer.postalcode %><br />
  <%= @customer.address %><br />
  <%= @customer.family_name %><%= @customer.first_name %>
  <br>

  <!-- 登録済住所から選択　-->

  <%= f.radio_button :address_option, 1 %>
  <%= f.label :delivery_address, "登録済住所から選択" %>
  <br>
  <%= f.collection_select :id, @addresses, :id, :order_addresses ,:include_blank => "選択してください" %>
  <br>

<!--delivery_address = delivery_addressを　：idにかえる？-->


  <!-- 新しいお届け先　-->

  <%= f.radio_button :address_option, 2 %>
  <%= f.label :delivery_address, "新しいお届け先" %>
  <br>

  <table>
   <tbody>
   <tr>
    <td><%= f.label :delivery_address, "郵便番号" %></td>
   <td><%= f.text_field :postalcode %></td>
  </tr>
  <tr>
   <td><%= f.label :delivery_address, "住所" %></td>
   <td><%= f.text_field :delivery_address %></td>
  </tr>
  <tr>
   <td><%= f.label :delivery_address, "宛名" %></td>
   <td><%= f.text_field :delivery_name %></td>
  </tr>
  </table>

  <br>
  <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
  <% end %>

</div>