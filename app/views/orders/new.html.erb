
<div class="order-field">
 <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>
  
  <!-- 支払い方法選択フォーム -->
  
  <h4><%= f.label :payment_method, payment_method "支払方法" %></h4>
  <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
  <%= f.label :payment_method, "クレジットカード" %>
  <br>
  <%= f.radio_button :payment_method, :銀行振込, checked: "checked" %>
  <%= f.label :payment_method, "銀行振込" %>
  
  
  <!-- お届け先選択フォーム -->
  
  <h4><%#= f.label :delivery_address, "お届け先" %></h4>
  
  <!-- ご自身の住所　-->
  
  <%#= f.radio_button :delivery_address, :ご自身の住所, checked: "checked" %>
  <%#= f.label :customer_address, "ご自身の住所" %>
  <br>
  <%#= @customer.postalcode %>
  <%#= @customer.address %>
  <br>
  
  <!-- 登録済住所から選択　-->
  <%#= f.radio_button :delivery_address, :登録済住所から選択, checked: "checked" %>
  <%#= f.label :customer_address, "登録済住所から選択" %>
  <%#= f.collection_select :order, current_user.Address.all, :id, :@address %>
  <br>
  
  
  
  
  <!-- 新しいお届け先　-->
  
  <%#= add.radio_button :delivery_address, :新しいお届け先, checked: "checked" %>
  <%#= add.label :delivery_address, "新しいお届け先" %>
  <br>
  
  <%= f.label :delivery_address, "郵便番号" %>
  <%= f.text_field :postalcode %>
  <br>
  <%= f.label :delivery_address, "住所" %>
  <%= f.text_field :delivery_address %>
  <br>
  <%= f.label :delivery_address, "宛名" %>
  <%= f.text_field :delivery_name %>
  <br>
  <%= f.submit "確認画面へ進む" %>
  <% end %>
  
</div>