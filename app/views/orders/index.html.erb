<div class="row" >
  <div class="col-md-12">

<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= order.postalcode %><br/>
          <%= order.delivery_address %><br/>
          <%= order.delivery_name %>
        </td>
        <td>
        <% order.order_products.each do |product| %>
        <%= product.product.name %>
        <% end %>
        </td>
        <td><%= order.total_price %>円</td>
        <td><%= order.order_status %></td>
        <td><%= link_to '表示する', order_path(order.id) %></td>
      </tr>
    </tbody>
    <% end %>
  </thead>
</table>

  </div>
</div>
