
 <!-- 注文情報入力 -->

 <h2>注文情報入力</h2>

 <table class="table">
   <tbody>
   <tr>
     <th>注文日</th>
     <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
   </tr>
   <tr>
     <th>配送先</th>
     <td>
      <%= @order.postalcode %><br/>
      <%= @order.delivery_address %><br/>
      <%= @order.delivery_name %>
     </td>
   </tr>
   <tr>
     <th>支払方法</th>
     <td><%= @order.payment_method %></td>
   </tr>
   <tr>
     <th>ステータス</th>
     <td><%= @order.order_status %></td>
   </tr>
   </tbody>
 </table>

 <!-- 請求情報 -->

 <table class="table">
   <tbody>
     <tr>
       <th>商品合計</th>
       <td><%= @total_price %></td>
     </tr>
     <tr>
       <th>配送料</th>
       <td>800</td>
     </tr>
     <tr>
       <th>ご請求金額</th>
       <td><%= @total_price + 800 %></td>
     </tr>
   </tbody>
 </table>

