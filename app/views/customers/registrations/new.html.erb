<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class = "field">
   <%= f.label :name_field ,"名前"%><br />
    <div class="name_field">
      <%= f.label :family_name ,"(姓)"%><br />
      <%= f.text_field :family_name, autofocus: true %>
      <%= f.label :first_name ,"(名)"%><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>
  </div>

  <div class = "field">
   <%= f.label :name_field ,"フリガナ"%><br />
    <div class="name_kana_field">
      <%= f.label :family_name_kana ,"(セイ)"%><br />
      <%= f.text_field :family_name_kana, autofocus: true %>
      <%= f.label :first_name_kana ,"(メイ)"%><br />
      <%= f.text_field :first_name_kana, autofocus: true %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email ,"メールアドレス"%><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :postalcode ,"郵便番号（ハイフンなし）"%><br />
    <%= f.text_field :postalcode, autofocus: true %>
  </div>

   <div class="field">
    <%= f.label :address ,"住所"%><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :tel ,"電話番号（ハイフンなし）"%><br />
    <%= f.text_field :tel, autofocus: true %>
  </div>

    <div class="field">
    <%= f.label :password ,"パスワード（6文字以上）"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation ,"パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm" %>
  </div>




  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
