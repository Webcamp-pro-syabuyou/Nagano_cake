<p>登録情報編集</p>
<%= form_with(model: current_customer, url:customers_path(current_customer),local:true) do |f|%>
<table>
  <tbody>
    <tr>
      <td>名前</td>
      <td>(姓）</td>
      <td><%= f.text_field :family_name%></td>
      <td>（名）</td>
      <td><%= f.text_field :first_name%></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>(セイ)</td>
      <td><%= f.text_field :family_name_kana%></td>
      <td>（メイ）</td>
      <td><%= f.text_field :first_name_kana%></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td>&nbsp;</td>
      <td><%= f.text_field :email%></td>
    </tr>
    <tr>
      <td>住所</td>
      <td>&nbsp;</td>
      <td><%= f.text_field :address%></td>
    </tr>
    <tr>
      <td>電話番号（ハイフンなし）</td>
      <td>&nbsp;</td>
      <td><%= f.text_field :tel%></td>
    </tr>
  </tbody>
</table>
<%= f.submit '編集内容を保存する' ,class:"btn btn-primary"%>
<% end %>

<%=link_to '退会する', customers_resign_path,class:"btn btn-danger"%>