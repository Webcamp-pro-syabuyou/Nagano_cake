<h1>登録情報編集</h1>
<%= form_with(model: current_customer, url:customers_path(current_customer),local:true) do |f|%>
<%= render 'layouts/error_message', model: f.object %>
<table class = "table">
    <tr>
      <th>名前</th>
      <td><%= f.text_field :family_name, class: "form-control" %></td>
      <td><%= f.text_field :first_name, class: "form-control" %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :family_name_kana, class: "form-control" %></td>
      <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, class: "form-control"%></td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <th>郵便番号（ハイフンなし）</th>
      <td><%= f.text_field :postalcode, class: "form-control" %></td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <th>住所</th>
      
      <td><%= f.text_field :address, class: "form-control"%></td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <th>電話番号（ハイフンなし）</th>
      <td><%= f.text_field :tel, class: "form-control" %></td>
      <td>&nbsp;</td>
    </tr>
  </tbody>
</table>
<%= f.submit '編集内容を保存する' ,class:"btn btn-primary"%>　<%=link_to '退会する', customers_resign_path,class:"btn btn-danger"%>
<% end %>

