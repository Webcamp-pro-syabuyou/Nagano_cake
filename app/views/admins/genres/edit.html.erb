<div class="container">
  <div class="row">
    <h3 class="under-border">ジャンル編集画面</h3>
    <div class="col-xs-6">
        <%= form_with url: admins_genre_path(@genre),model:@genre,local: true do |f| %>
          <%= render 'layouts/error_message', model: @genre %>
          <%= f.text_field :name%>
          <%= f.radio_button :is_active, true %>
          <%= f.label :有効 %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :無効 %>
          <%= f.submit "変更を保存する",class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
