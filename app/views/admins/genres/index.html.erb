
<div class="row">
  <h3 class="under-border">ジャンル追加・一覧画面</h3>
  <div class="col-xs-6 genre-form">
    <%= form_with url: admins_genres_path,model: @genre,local: true do |f| %>
      <%= render 'layouts/error_message', model: @genre %>
      <%= f.text_field :name%>
      <%= f.radio_button :is_active, true %>
      <%= f.label :有効 %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :無効 %>
      <%= f.submit "追加" ,class:"btn btn-primary" %>
    <% end %>
  </div>

  <div class="col-xs-10">
    <table class="table">
      <thead class="thead-light">
        <tr class="active">
          <th>ジャンルです</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%#= t("enums.name.is_active.#{genre.is_active}") %>
              <% if genre.is_active %>
                有効
              <% else %>
                無効
              <% end %>
            </td>
            <td><%= link_to "編集する", edit_admins_genre_path(genre.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @genres %>
