<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= form_with model:@customer, url: admins_customer_path(@customer), locol: true do |f| %>
        <%= render "layouts/error_message", model: f.object %>
        <div class="field">
          <%= f.label :id %><br>
          <%= f.text_field :id ,autofocus: true, readonly: true %>
        </div>

        <div class="field">
          <%= f.label :氏名 %><br>
          <%= f.text_field :family_name ,autofocus: true, autocomplete: "family_name" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>

        <div class="field">
          <%= f.label :フリガナ %><br>
          <%= f.text_field :family_name_kana ,autofocus: true, autocomplete: "family_name_kana" %>
          <%= f.text_field :first_name_kana ,autofocus: true, autocomplete: "first_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号 %><br>
          <%= f.text_field :postalcode ,autofocus: true, autocomplete: "postalcode" %>
        </div>

        <div class="field">
          <%= f.label :住所 %><br>
          <%= f.text_field :address ,autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.label :電話番号 %><br>
          <%= f.telephone_field :tel ,autofocus: true, autocomplete: "tel" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br>
          <%= f.email_field :email ,autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :会員ステータス %><br>
          <%= f.radio_button :is_deleted, false %>有効
          <%= f.radio_button :is_deleted, true %>退会済み
        </div>

        <div class="actions">
          <%= f.submit "変更を保存する" ,class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

