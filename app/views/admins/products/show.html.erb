<h1>商品 詳細画面</h1>

        <div class="row">

           <div class="col-md-4">
             <div class="product-imag">
               <table class="table">
                 <tr>
                   <th><div class="text-center"><%= attachment_image_tag @product, :image, :limit, 320, 320, fallback: "no_image.jpg",size: "320x320" %></div></th>
                 </tr>
               </table>
             </div>
           </div>

           <div class="col-md-8">

            <table class="table">
              <tr>
                <th>商品名</th>
                <td><%= @product.name %></td>
              </tr>
              <tr>
                <th>商品説明</th>
                <td><%= @product.introduction %></td>
              <tr>
                <th>ジャンル</th>
                <td><%= @product.genre.name %></td>
              </tr>
              <tr>
                <th>税込価格</th>
                <td><%= (@product.price * 1.1).floor %>(<%= @product.price %>)円</td>
              </tr>
              <tr>
                <th>ステータス</th>
                <td>
                  <% if @product.is_active %>
                  販売中
                  <% else %>
                  販売停止中
                  <% end %>
                </td>
              </tr>
            </table>
          </div>

        </div>

        <div class="row">

          <div class="col-md-12">
            <div class="text-right">
              <%= link_to "編集する",edit_admins_product_path(@product.id),class: "btn btn-primary" %>
            </div>
          </div>

        </div>
