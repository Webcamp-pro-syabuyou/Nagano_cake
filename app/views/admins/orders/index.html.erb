<h1>注文履歴</h1>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        <td><%= link_to order.customer.family_name + order.customer.first_name, admins_order_path(order) %></td>
        <td><%= order.order_products.sum(:quantity) %></td>
        <td><%= order.order_status %></td>
        <!--+ "integerでは行っているので文字列に戻さなければいけない/enum使うべき？"-->
      </tr>
    <% end %>
  </tbody>
</table>