<section>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <div>
                    <div class="text-center">
                      <%= flash[:error] %>
                        <h1 class="under-border">管理者ログイン</h1>
                    </div>
                    <div>

                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <table = class="table">
                          <tr>
                            <th>メールアドレス</th>
                        　　<td><%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス"%></td>　
                          </tr>
                          <tr>
                           <th>パスワード</th>
                           <td><%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %></td>
                          </tr>
                        </table>  
                        
                          <%= f.submit "サインイン", class: "btn btn-success"  %>
                        </div>

                        <% end %> 



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>