<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- header -->
    <header>
      <div class="header">
   <div class="logo">Logo</div>
   <div class="header-list">
     <nav>
       <ul>
         <!-- if coustomer_sign_in -->
         <% if customer_signed_in? %>
         <a href="#"><li class="header-list-item">マイページ</li></a>
         <a href ="#"><li class="header-list-item">商品一覧</li></a>
         <a href ="#"><li class="header-list-item">カート</li></a>
         <li class="header-list-item"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>


         <!-- if coustomer_sign_out -->

         <% else %>

         <li class="header-list-item"><%= link_to "About", homes_about_path %></li>
         <a href ="#"><li class="header-list-item">商品一覧</li></a>
         <li class="header-list-item"><%= link_to "新規登録", new_customer_registration_path %></li>
         <li class="header-list-item"><%= link_to "ログイン", new_customer_session_path %></li>


        <% end %>

         <!-- if admin_sign_in -->

         <% if admin_signed_in? %>
         <a href ="#"><li class="header-list-item">商品一覧</li></a>
         <a href ="#"><li class="header-list-item">会員一覧</li></a>
         <a href ="#"><li class="header-list-item">注文履歴一覧</li></a>
         <a href ="#"><li class="header-list-item">ジャンル一覧</li></a>
         <li class="header-list-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
         <% end %>
       </ul>
     </nav>
   </div>

   </div>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

     <main>
       <div class="container">

    <%= yield %>
       </div>
    </main>
  </body>
</html>
