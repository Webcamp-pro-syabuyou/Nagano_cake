<h1>配送先登録 / 一覧</h1>

 <!--配送先登録-->
 
  <%= form_with model:@address, url:customers_addresses_path, local:true do |f|%>
    <div class  = "row">
      <div class='col-md-12'>
        <table class="table" >
          <tr>
            <th>郵便番号（ハイフンなし）</p></th>
            <td><%= f.text_field :postalcode, autofocus: true, class: "form-control" %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, autofocus: true , size: 50, class: "form-control" %></td>
          </tr>
          <tr>
           <th>宛名</th>
           <td><%= f.text_field :delivery_name, autofocus: true, class: "form-control" %></td>
          </tr>
        </table>
      </div>
       　 <%= f.submit"登録する",class: "btn btn-success"%>
      </div>
    <% end %>
<br>

    <!--配送先一覧-->
    <div class="row">
    <div class='col-md-12'>
      <% if @addresses.present? %>
        <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postalcode%></td>
              <td><%= address.address%></td>
              <td><%= address.delivery_name %></td>
              <td>
                <%= link_to"編集する",edit_customers_address_path(address),class:"btn btn-primary"%>　
                <%= link_to"削除する",customers_address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn btn-danger"%>
                <!--まとめて右寄せするには？-->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <p>登録済の送付先はありません</p>
      <% end %>
    </div>
  </div>


