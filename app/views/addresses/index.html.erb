<p>配送先登録/一覧</p>

 <!--配送先登録-->
  <%= form_with model:@address, url:customers_addresses_path, local:true do |f|%>
    <div class  = "row">
      <div class='col-xs-8'>
        <table heignt = 500>
          <tr>
            <td>郵便番号（ハイフンなし）</td>
            <td><%= f.text_field :postalcode, autofocus: true %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, autofocus: true , size: 50%></td>
          </tr>
          <tr>
           <td>宛名</td>
           <td><%= f.text_field :delivery_name, autofocus: true %></td>
          </tr>
        </table>
      </div>
      <div class='col-xs-4'>
        <%= f.submit"登録する",class: "btn btn-success"%>
      </div>
    <% end %>


    
    <!--配送先一覧-->
    <div class='col-xs-8'>
      <% if @addresses.present? %>
        <table border = 1 , width = 300, class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postalcode%></td>
              <td><%= address.address%></td>
              <td><%= address.delivery_name %></td>
              <td>
                <%= link_to"編集する",edit_customers_address_path(address),class:"btn btn-primary"%>
                <%= link_to"削除する",customers_address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn btn-danger"%>
                <!--まとめて右寄せするには？-->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <p>登録済の送付先はありません</p>
      <% end %>
    </div>
  </div>


