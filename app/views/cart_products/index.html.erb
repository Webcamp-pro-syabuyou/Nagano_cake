<div class="container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-1">
        <h2>ショッピングカート</h2>
      </div>
      <div class="col-xs-1 col-xs-offset-8">
        <%= link_to cart_products_destroy_all_path, method: :delete do %>
          <button class="btn btn-danger">カートを空にする</button>
        <% end %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-xs-10">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <% @cart_products.each do |cart_product| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_product.product, :image_id, :fill, 50, 50, format:'jpeg', fallback:"no_image.jpg", size:"50x50" %>
                <%= cart_product.product.name %>
              </td>
              <td><%= cart_product.product.price %></td>
              <td>
                <%= form_with model: cart_product, url: cart_product_path(cart_product), local: true do |f| %>
                  <%= f.hidden_field :id, :value => cart_product.id %>
                  <%= f.text_field :quantity %>
                  <%= f.submit "変更", class: "btn btn-primary" %>
                <% end %>
              </td>
              <td><%= cart_product.quantity * cart_product.product.price %></td>
              <td>
                <%= link_to cart_product_path(cart_product), method: :delete do %>
                  <button class="btn btn-danger">削除する</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-1">
        <%= link_to products_path do %>
          <button class="btn btn-primary">買い物を続ける</button>
        <% end %>
      </div>
      <div class="col-xs-3 col-xs-offset-9">
        <table class="table table-bordered">
          <tr>
            <th>合計金額</th>
            <td><%= @total_price %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <button class="btn btn-success">情報入力に進む</button>
      </div>
    </div>
  </div>
